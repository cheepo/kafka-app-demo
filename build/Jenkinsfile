pipeline {

    agent {
        kubernetes {
            label 'build-service-pod'
            defaultContainer 'jnlp'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  name: build-service-pod
spec:
  containers:
    - name: kaniko
      image: gcr.io/kaniko-project/executor:debug
      command:
        - /busybox/cat
      tty: true
      volumeMounts:
        - name: kaniko-secret
          mountPath: /kaniko/.docker
        - name: kaniko-workspace
          mountPath: /kaniko/workspace
          readOnly: false
    - name: git
      image: alpine/git:2.36.2
      command: ["cat"]
      tty: true
      volumeMounts:
        - name: kaniko-workspace
          mountPath: /kaniko/workspace
          readOnly: false
    - name: maven
      image: maven:3.8.6-eclipse-temurin-17
      command: ["cat"]
      tty: true
      volumeMounts:
        - name: kaniko-workspace
          mountPath: /root/.m2
          readOnly: false
  dnsPolicy: ClusterFirst
  dnsConfig:
    options:
      - name: ndots
        value: "1"
  volumes:
    - name: kaniko-secret
      secret:
        secretName: regcred
        items:
          - key: .dockerconfigjson
            path: config.json
    - name: kaniko-workspace
      persistentVolumeClaim:
        claimName: jenkins-build
"""
        }
    }
    options {
        skipDefaultCheckout true
    }
    stages {
       stage ('pull')  {
         steps {
             container('git') {  
                 sh 'git -C /kaniko/workspace stash'
                 sh 'git -C /kaniko/workspace pull https://github.com/cheepo/kafka-app-demo.git'
             }
         }
       }
       stage ('build') {
         steps {
                container('maven') {
                    sh 'mvn clean install'
                }
         }
      }
    }
}
